{
    "manifest_version": 3,
    "name": "Time tracker",
    "description": "Giúp người dùng tính toán thời gian sử dụng mạng xã hội trong ngày và đưa ra khuyến nghị nếu vượt quá mức quy định.",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "storage",
        "background"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://www.facebook.com/*",
        "https://www.youtube.com/*"
    ]
}
